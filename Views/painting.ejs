<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("./Partials/head") %>
  <title><%= painting.title %></title>
  <style>
    #reaction-menu {
      position: absolute;
      display: none;
      background: white;
      border: 1px solid #ccc;
      border-radius: 10px;
      padding: 5px 10px;
      z-index: 1000;
      flex-wrap: wrap;
      gap: 10px;
    }
    .reaction-option {
      cursor: pointer;
      font-size: 1.4rem;
    }
  </style>
</head>
<body>
  <%- include("./Partials/nav") %>

  <div class="container">

    <!-- 🎨 Painting Info -->
    <div class="mt-4">
      <h1><%= painting.title %></h1>
      <img src="<%= painting.coverImageURL %>" width="400px" class="mb-3">
      <pre class="mt-3"><%= painting.body %></pre>
    </div>

    <!-- 👤 Creator Info -->
    <div class="mt-4 d-flex align-items-center gap-2">
      <img src="<%= painting.createdBy.profileImageURL %>" width="25px" style="border-radius: 20px;">
      <%= painting.createdBy.fullName %>
    </div>

    <!-- 😍 Reactions -->
    <div class="mt-4">
      <h2>Your Reaction</h2>
      <form action="/painting/reactions" method="POST" class="d-flex gap-3 flex-wrap" id="reaction-form">
        <% const emojiList = [
          { emoji: "👍", type: "like" },
          { emoji: "❤️", type: "love" },
          { emoji: "🤗", type: "care" },
          { emoji: "😠", type: "angry" },
          { emoji: "😢", type: "sad" }
        ]; %>

        <% emojiList.forEach(({ emoji, type }) => { %>
          <button type="submit"
                  name="reactionType"
                  value="<%= type %>"
                  class="btn btn-light shadow-sm reaction-button">
            <span style="font-size: 1.3rem;"><%= emoji %></span>
            <span class="ms-1">
              <%= reactionCounts && reactionCounts[type] ? reactionCounts[type] : 0 %>
            </span>
          </button>
        <% }) %>

        <input type="hidden" name="postType" value="painting">
        <input type="hidden" name="postId" value="<%= painting._id %>">
        <input type="hidden" name="reactionType" value="">
      </form>
    </div>

    <!-- 💬 Comment Form -->
    <div class="mt-4">
      <form action="/painting/comment/<%= painting._id %>" method="post">
        <h2>Comments (<%= paintingComments.length %>)</h2>
        <div class="form-floating">
          <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2"
                    name="content" style="height: 100px"></textarea>
          <label for="floatingTextarea2">Comments</label>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Post Comment</button>
      </form>
    </div>

    <!-- 💭 Display Comments -->
    <div class="mt-3">
      <% paintingComments.forEach(comment => { %>
        <div class="mb-2">
          <img src="<%= comment.createdBy.profileImageURL %>" width="25px" style="border-radius: 20px;">
          <strong><%= comment.createdBy.fullName %></strong>
          <pre class="mt-1"><%= comment.content %></pre>
        </div>
      <% }) %>
    </div>

    <!-- 🎯 Reaction Popup -->
    <div id="reaction-menu">
      <% ["like", "love", "care", "angry", "sad"].forEach(type => {
           const emoji = { like: "👍", love: "❤️", care: "🤗", angry: "😠", sad: "😢" }[type]; %>
        <span class="reaction-option" data-reaction="<%= type %>"><%= emoji %></span>
      <% }) %>
    </div>

  </div>

  <%- include("./Partials/scripts") %>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const reactionButtons = document.querySelectorAll(".reaction-button");
      const reactionMenu = document.getElementById("reaction-menu");
      const reactionForm = document.getElementById("reaction-form");
      const reactionTypeInput = reactionForm.querySelector("input[name='reactionType']");

      reactionButtons.forEach(button => {
        button.addEventListener("contextmenu", (e) => {
          e.preventDefault();
          reactionMenu.style.left = e.pageX + "px";
          reactionMenu.style.top = e.pageY + "px";
          reactionMenu.style.display = "flex";
        });
      });

      document.querySelectorAll(".reaction-option").forEach(option => {
        option.addEventListener("click", () => {
          reactionTypeInput.value = option.dataset.reaction;
          reactionForm.submit();
        });
      });

      document.addEventListener("click", () => {
        reactionMenu.style.display = "none";
      });
    });
  </script>
</body>
</html>