<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("./Partials/head") %>
  <title>SignUp</title>
</head>

<body>
  <%- include("./Partials/nav") %>

  <div class="container mt-4">
    <form action="/user/signup" method="post" enctype="multipart/form-data">
      <!-- Full Name -->
      <div class="mb-3">
        <label for="fullName" class="form-label">Full name</label>
        <input type="text" class="form-control" name="fullName" id="fullName" required>
      </div>

      <!-- Email -->
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Email address</label>
        <input type="email" class="form-control" name="email" id="exampleInputEmail1" required>
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
      </div>

      <!-- Interests -->
      <div class="mb-3">
        <label class="form-label">Interested Fields</label>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" name="interestedFields[]" value="ALL" id="fieldAll">
          <label class="form-check-label" for="fieldAll">ALL</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" name="interestedFields[]" value="SINGING" id="fieldSinging">
          <label class="form-check-label" for="fieldSinging">SINGING</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" name="interestedFields[]" value="DANCING" id="fieldDancing">
          <label class="form-check-label" for="fieldDancing">DANCING</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" name="interestedFields[]" value="DRAWING" id="fieldDrawing">
          <label class="form-check-label" for="fieldDrawing">DRAWING</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" name="interestedFields[]" value="PHOTOGRAPHY" id="fieldPhotography">
          <label class="form-check-label" for="fieldPhotography">PHOTOGRAPHY</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" name="interestedFields[]" value="CODING" id="fieldCoding">
          <label class="form-check-label" for="fieldCoding">CODING</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" name="interestedFields[]" value="GAMING" id="fieldGaming">
          <label class="form-check-label" for="fieldGaming">GAMING</label>
        </div>
      </div>

      <!-- Password -->
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Password</label>
        <input type="password" class="form-control" name="password" id="exampleInputPassword1" required>
        <div id="password" class="form-text">Save it now, you wonâ€™t be able to change it later.</div>
      </div>

      <!-- Profile Image -->
      <div class="mb-3">
        <label for="profileImage" class="form-label">Profile Image</label>
        <input type="file" class="form-control" id="profileImage" name="profileImage" accept="image/*">
        <div id="profileImageHelp" class="form-text">There is no second chance to update your profile image.</div>
      </div>

      <!-- Submit -->
      <button type="submit" class="btn btn-primary">Create Account</button>
    </form>
  </div>

  <%- include("./Partials/scripts") %>
</body>
</html>